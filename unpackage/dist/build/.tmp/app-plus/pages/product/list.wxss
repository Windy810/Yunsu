.product-list .navbar {
    position: fixed;
    left: 0;
    /*top: var(--window-top);*/
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 100%;
    height: 80rpx;
    background: #fff;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.06);
    z-index: 10;
}
.product-list .navbar .nav-item {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      height: 100%;
      font-size: 30rpx;
      color: #303133;
      position: relative;
}
.product-list .navbar .nav-item.current {
        color: #47885e;
}
.product-list .navbar .nav-item.current:after {
          content: '';
          position: absolute;
          left: 50%;
          bottom: 0;
          -webkit-transform: translateX(-50%);
                  transform: translateX(-50%);
          width: 120rpx;
          height: 0;
          border-bottom: 4rpx solid #47885e;
}
.product-list .navbar .p-box {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
}
.product-list .navbar .p-box .iconfont {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
                justify-content: center;
        width: 30rpx;
        height: 14rpx;
        line-height: 1;
        margin-left: 4rpx;
        font-size: 26rpx;
        color: #888;
}
.product-list .navbar .p-box .iconfont.active {
          color: #47885e;
}
.product-list .navbar .p-box .xia {
        -webkit-transform: scaleY(-1);
                transform: scaleY(-1);
}
.product-list .navbar .cate-item {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      height: 100%;
      width: 80rpx;
      position: relative;
      font-size: 44rpx;
}
.product-list .navbar .cate-item:after {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        -webkit-transform: translateY(-50%);
                transform: translateY(-50%);
        border-left: 1px solid #ddd;
        width: 0;
        height: 36rpx;
}
.product-list .cate-mask {
    position: fixed;
    left: 0;
    top: 40px;
    bottom: 0;
    width: 100%;
    background: transparent;
    z-index: 95;
    -webkit-transition: .3s;
    transition: .3s;
}
.product-list .cate-mask .cate-content {
      width: 630rpx;
      height: 100%;
      background: #fff;
      float: right;
      -webkit-transform: translateX(100%);
              transform: translateX(100%);
      -webkit-transition: .3s;
      transition: .3s;
}
.product-list .cate-mask.none {
      display: none;
}
.product-list .cate-mask.show {
      background: rgba(0, 0, 0, 0.4);
}
.product-list .cate-mask.show .cate-content {
        -webkit-transform: translateX(0);
                transform: translateX(0);
}
.product-list .cate-mask .cate-list {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      height: 100%;
}
.product-list .cate-mask .cate-list .cate-item {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        height: 70rpx;
        padding-left: 30rpx;
        font-size: 30rpx;
        position: relative;
        color: #303133;
}
.product-list .cate-mask .cate-list .one {
        background: #eee;
}
.product-list .cate-mask .cate-list .two {
        background: #f8f8f8;
        color: #606266;
        height: 60rpx;
        font-size: 28rpx;
        padding-left: 50rpx;
}
.product-list .cate-mask .cate-list .three {
        font-size: 26rpx;
        color: #606266;
}
.product-list .cate-mask .cate-list .active {
        color: #47885e;
}

