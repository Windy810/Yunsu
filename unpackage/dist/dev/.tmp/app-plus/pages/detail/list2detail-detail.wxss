      font-size: 42rpx;
      -webkit-transform: translateY(-2rpx);
              transform: translateY(-2rpx);
}
.page-bottom .p-b-btn .icon-shoucang {
      font-size: 46rpx;
}
.page-bottom .p-b-btn .red {
